<GridPane styleClass="errorPane" xmlns:fx="http://javafx.com/fxml" fx:controller="com.exallium.swissrunner.app.viewcontrollers.ErrorViewController">
    <rowConstraints>
        <RowConstraints percentHeight="50" />
        <RowConstraints percentHeight="50" />
    </rowConstraints>
    <columnConstraints>
        <ColumnConstraints percentWidth="50" />
        <ColumnConstraints percentWidth="50" />
    </columnConstraints>
    <Label fx:id="errorArea" GridPane.rowIndex="0" GridPane.columnSpan="2"/>
    <Button onAction="#onConfirm" GridPane.rowIndex="1" GridPane.columnIndex="1" maxWidth="Infinity" styleClass="actionButton" text="%confirm"/>
    <stylesheets>
        <URL value="@/fxcss/shared.css" />
        <URL value="@/fxcss/error.css" />
    </stylesheets>
</GridPane>